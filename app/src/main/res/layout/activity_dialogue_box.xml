<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="300dp"
              android:layout_height="325dp"
              android:background="@android:color/white"
              android:orientation="vertical">

    <TextView
        android:id="@+id/txt_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:text="Tutorial"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:text="Select All that apply by tapping on buttons"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:scaleType="centerInside"
        android:src="@drawable/image_clicked"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_margin="8dp"
        android:text="A red line appears under buttons you have selected"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:src="@drawable/image_clicked2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_margin="8dp"
        android:text="After your selection, Tap start"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:src="@drawable/lkjlkj"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_margin="8dp"
        android:text="Your customized map will appear"/>


</LinearLayout>